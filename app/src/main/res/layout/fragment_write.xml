<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.WriteFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/edt_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="20"
        android:maxLines="20"
        android:gravity="top"
        android:scrollbars="vertical"
        android:hint="Share your content"
        />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        >
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_keybroad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_choosephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
    </LinearLayout>

</LinearLayout>
